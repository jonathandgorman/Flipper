<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screen.CategoryChoiceActivity">

    <ImageButton
        android:id="@+id/categoryImageButton1"
        android:layout_width="368dp"
        android:layout_height="85dp"
        android:layout_marginTop="8dp"
        android:src="@mipmap/apple"
        app:layout_constraintBottom_toTopOf="@+id/categoryImageButton2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/categoryImageButton2"
        android:layout_width="368dp"
        android:layout_height="85dp"
        android:text="Vegetabes"
        app:layout_constraintBottom_toTopOf="@+id/categoryImageButton3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/categoryImageButton1" />

    <ImageButton
        android:id="@+id/categoryImageButton3"
        android:layout_width="368dp"
        android:layout_height="85dp"
        android:text="Button"
        app:layout_constraintBottom_toTopOf="@+id/categoryImageButton4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/categoryImageButton2" />

    <ImageButton
        android:id="@+id/categoryImageButton4"
        android:layout_width="368dp"
        android:layout_height="85dp"
        android:text="Button"
        app:layout_constraintBottom_toTopOf="@+id/categoryImageButton5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/categoryImageButton3" />

    <ImageButton
        android:id="@+id/categoryImageButton5"
        android:layout_width="368dp"
        android:layout_height="85dp"
        android:text="Button"
        app:layout_constraintBottom_toTopOf="@+id/categoryImageButton6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/categoryImageButton4" />

    <ImageButton
        android:id="@+id/categoryImageButton6"
        android:layout_width="368dp"
        android:layout_height="86dp"
        android:layout_marginBottom="8dp"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/categoryImageButton5" />
</android.support.constraint.ConstraintLayout>