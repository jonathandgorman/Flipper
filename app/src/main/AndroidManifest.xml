<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jonathangorman.flipper">

    <application
        android:allowBackup="true"
        android:icon="@android:color/transparent"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/loro_logo_round"
        android:supportsRtl="true"
        android:theme="@style/LoroTheme">
        <activity android:name=".primary.LanguageChoiceActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".primary.CardScreenActivity" />
        <activity android:name=".primary.CategoryChoiceActivity" />
        <activity
            android:name=".action.InfoDisplayActivity"
            android:label="@string/title_activity_about_activity"></activity>
    </application>

</manifest>